<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @followers.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'フォロー数'+": #{@user.followers.count}", followings_user_path(@user.id) %></td>
        <td><%= link_to 'フォロワー数'+": #{@user.followings.count}", followers_user_path(@user.id) %></td>
        <td><%= link_to 'show', user_path(user) %></td>
      </tr>
  </tbody>
<% end %>

